<%
    @PageTitle=(((defined?(@PageTitle)).nil?)?'':@PageTitle)+' | Bayes Algoritması ile Sosyal Medya Kötüye kullanım Analizi ve Sınıflandırılması'
%>

<!DOCTYPE html>
<html>
    <head>
        <title><%= @PageTitle %></title>
        <meta charset="UTF-8">
        <link rel="shortcut icon" href="<%= image_url('main/icon.ico') %>" />
        <meta name="description" content="Bayes Algoritması ile Sosyal Ağ Analizi ve Içeriklerin Sınıflandırılması">
        <meta name="keywords" content="Bayes, Algoritma, Sosyal, Ağ, Analiz, Sınıflandırma">
        <meta name="author" content="Yusuf DURSUN, Adem YAĞMURLU">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <DIV class="row">
            <NAV class="col-md-12">
                <%= render 'ortak/navbar' %>
            </NAV>
            <HEADER class="col-md-12 text-center baslik">
                <%= render 'ortak/banner' %>
            </HEADER>
            <DIV class="row container-fluid">
                <SECTION class="col-md-9">
                    <p id="notice"><%= notice %></p>
                    <%= yield %>
                </SECTION>
                <ASIDE class="col-md-3">
                    <%= render 'ortak/sidebar' %>
                </ASIDE>
            </DIV>
            <FOOTER class="col-md-12">
                <%= render 'ortak/footer' %>
            </FOOTER>
        </DIV>
    </body>
</html>